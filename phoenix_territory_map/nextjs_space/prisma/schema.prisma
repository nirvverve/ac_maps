generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  LEVEL2
  LEVEL1
}

model User {
  id                String   @id @default(cuid())
  email             String   @unique
  password          String?  // Nullable until user sets their password
  role              UserRole @default(LEVEL1)
  hasRegistered     Boolean  @default(false)
  verificationCode  String?  // 6-digit code for email verification
  codeExpiresAt     DateTime? // Expiry time for verification code
  emailVerified     Boolean  @default(false) // Track if email has been verified
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  uploadLogs        UploadLog[]

  @@index([email])
}

model UploadLog {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  location    String
  dataType    String
  fileName    String
  fileSize    Int
  recordCount Int
  backupKey   String?
  geocoded    Int      @default(0)
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}
